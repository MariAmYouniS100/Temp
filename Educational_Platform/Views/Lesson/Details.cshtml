@model LessonViewModel
@{
    ViewData["Title"] = "Lesson Details";
    Layout = "~/Views/Shared/instructorLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm my-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 text-center"><i class="fas fa-info-circle me-2"></i>Lesson Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- Title -->
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <!-- Supporting Files -->
                        <dt class="col-sm-4">Supporting Files</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.SupportingFiles))
                            {
                                <a href="@Model.SupportingFiles" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-file-download me-1"></i>@System.IO.Path.GetFileName(Model.SupportingFiles)
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No supporting files</span>
                            }
                        </dd>

                        <!-- Task File -->
                        <dt class="col-sm-4">Task File</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.TaskFileName))
                            {
                                <a href="@Model.TaskFileName" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-file-download me-1"></i>@System.IO.Path.GetFileName(Model.TaskFileName)
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No task file</span>
                            }
                        </dd>

                        <!-- Video URL -->
                        <dt class="col-sm-4">Video</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.VideoURL))
                            {
                                <a href="@Model.VideoURL" target="_blank" class="text-decoration-none">
                                    <i class="fas fa-video me-1"></i>@System.IO.Path.GetFileName(Model.VideoURL)
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No video</span>
                            }
                        </dd>

                        <!-- Creation Date -->
                        <dt class="col-sm-4">Creation Date</dt>
                        <dd class="col-sm-8">@Model.Create_date.ToString("dd MMM yyyy hh:mm tt")</dd>

                        <!-- Course -->
                        <dt class="col-sm-4">Course</dt>
                        <dd class="col-sm-8">@Model.Course?.Title</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .detail-item {
        margin-bottom: 1.5rem;
    }

    .detail-label {
        color: #6c757d;
        font-size: 0.875rem;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1.1rem;
        margin-bottom: 0;
    }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips if needed
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}